<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>home-page</servlet-name>
        <servlet-class>controller.HomePage</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>personal-blog</servlet-name>
        <servlet-class>controller.PersonalBlog</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>controller.Login</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>error</servlet-name>
        <servlet-class>controller.Error</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>contact</servlet-name>
        <servlet-class>controller.Contact</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>home-page</servlet-name>
        <url-pattern>/home-page</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>personal-blog</servlet-name>
        <url-pattern>/personal-blog</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>error</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>contact</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>home-page</welcome-file>
    </welcome-file-list>

</web-app>